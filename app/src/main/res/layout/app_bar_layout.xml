<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/spacing_xhuge"
        android:background="@drawable/toolbr_bg"
        android:minHeight="?attr/actionBarSize"
        app:contentInsetStart="0dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            >

             <ImageView
                 android:id="@+id/iv_side_menu"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_gravity="start|center"
                 android:src="@drawable/icon_side_menu"
                 android:visibility="gone"
                 android:layout_alignParentBottom="true"
                 android:layout_marginBottom="@dimen/spacing_tiny" />

            <ImageView
                android:id="@+id/bt_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/spacing_tiny"
                android:src="@drawable/icon_back"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_appbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:text="Profile Completeness"
                android:textColor="@color/white"
                android:textSize="@dimen/spacing_medium"
                android:visibility="gone" />

            <Button
                android:id="@+id/bt_skip"
                style="@style/pill_appbar"
                android:layout_width="@dimen/spacing_huge"
                android:layout_height="@dimen/spacing_large"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:text="@string/bt_skip_pill"
                android:visibility="gone" />
        </RelativeLayout>


    </android.support.v7.widget.Toolbar>
</LinearLayout>
